{{#extend 'default'}}
    {{#content 'content'}}

        <a href="/">Go To Main Page</a>

        <hr>

        <div class="row">
            <div class="col-md-6">
                <h3>Buy Book</h3>
                {{> form data=buy_book_data }}
            </div>
            <div class="col-md-6">
                <h3>Register User</h3>
                {{> form data=register_user_data }}
            </div>
        </div>

        <br><hr><br>

        <div class="row">
            <div class="col-md-6">
                <h3>Add Author</h3>
                {{> form data=add_author_data }}
            </div>
            <div class="col-md-6">
                <h3>Add Publisher</h3>
                {{> form data=add_publisher_data }}
            </div>
        </div>

        <br><hr><br>

        <div class="row">
            <div class="col-md-6">
                <h3>Cascade Remove Author</h3>
                {{> form data=cascade_remove_author_data }}
            </div>
            <div class="col-md-6">
                <h3>Cascade Remove Publisher</h3>
                {{> form data=cascade_remove_publisher_data }}
            </div>
        </div>

        <br><hr><br>

    {{/content}}
{{/extend}}